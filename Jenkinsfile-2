pipeline {
    agent {
        dockerfile true
    }
    stages {
        stage('Passing variable') {
            environment {
                PASSWORD = credentials('SECRET')
            }
            steps {
                sh '''
                    export PASSWORD="$PASSWORD"
                    export TESTENV=blablabla
                    printenv
                '''
            }
        }
        stage('Checking variable') {
            steps {
                sh 'printenv'
            }
        }
    }
}
